<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <link rel="stylesheet" href="/css/style.css" />
</head>

<body{{#if sessionId}} data-session-id="{{sessionId}}"{{/if}}{{#if facilitator}} data-username="{{facilitator}}"{{/if}}>
    <header>
        <h1>Simple CMS Uploader</h1>
        <nav>
            <a href="/">Home</a>
            <a href="/upload">Upload</a>
            <a href="/files">Files</a>
            <!-- Quick logout button for dev/testing -->
            <form method="post" action="/logout" style="display:inline; margin-left:12px;">
                <button type="submit" style="background:#c0392b;color:#fff;border:none;padding:6px 10px;border-radius:4px;cursor:pointer;">Logout</button>
            </form>
        </nav>
    </header>

    <!-- Flash messages container -->
    <div id="flash-container">
        {{#if success_msg}}
            {{#each success_msg}}
                <div class="flash-banner flash-success-banner">{{this}}</div>
            {{/each}}
        {{/if}}

        {{#if error_msg}}
            {{#each error_msg}}
                <div class="flash-banner flash-error-banner">{{this}}</div>
            {{/each}}
        {{/if}}
    </div>

    <main>
        {{{body}}}
    </main>

    <footer>
        <p>Â© {{year}} CMS Dev Build</p>
    </footer>

    <script type="module" src="/js/main.js"></script>
</body>

</html>
