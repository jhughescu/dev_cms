<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <link rel="stylesheet" href="/css/style.css" />
</head>

<body{{#if sessionId}} data-session-id="{{sessionId}}"{{/if}}{{#if username}} data-username="{{username}}"{{/if}}>
    <header>
        <h1>Student View</h1>
        <nav>
            
            <!-- Leave session button -->
            <button id="leave-session-btn" class="warning" style="margin-left:12px;">Leave session</button>
        </nav>
    </header>

    <!-- Flash messages container -->
    <div id="flash-container">
        {{#if success_msg}}
            {{#each success_msg}}
                <div class="flash-banner flash-success-banner">{{this}}</div>
            {{/each}}
        {{/if}}

        {{#if error_msg}}
            {{#each error_msg}}
                <div class="flash-banner flash-error-banner">{{this}}</div>
            {{/each}}
        {{/if}}
    </div>

    <main>
        {{{body}}}
    </main>

    <footer>
        <p>Â© {{year}} CMS Dev Build</p>
    </footer>
    <script type="module" src="/js/main-student.js"></script>
</body>

</html>
