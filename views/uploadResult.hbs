<h2>{{message}}</h2>

{{#if success}}
  <p><strong>File uploaded successfully!</strong></p>
  <ul>
    <li><strong>Original Name:</strong> {{file.originalName}}</li>
    <li><strong>Stored Filename:</strong> {{file.filename}}</li>
    <li><strong>Type:</strong> {{file.mimetype}}</li>
    <li><strong>Size:</strong> {{file.size}} bytes</li>
    <li><strong>Organisation:</strong> {{file.organisation}}</li>
    <li><strong>URL:</strong> <a href="{{file.url}}">{{file.url}}</a></li>
  </ul>
{{else}}
  <p class="alert alert-error">Upload failed or duplicate file detected.</p>
  {{#if duplicateOf}}
    <h4>Existing File Info:</h4>
    <ul>
      <li><strong>ID:</strong> {{duplicateOf.id}}</li>
      <li><strong>Original Name:</strong> {{duplicateOf.originalName}}</li>
      <li><strong>Uploaded At:</strong> {{duplicateOf.uploadedAt}}</li>
    </ul>
  {{/if}}
{{/if}}

<a href="/upload">Upload another file</a>
