<h1>{{title}}</h1>

<p>Select an asset to send to all students:</p>

<div id="file-list">
    {{#if files.length}}
        <ul>
            {{#each files}}
                <li class="file-item" data-url="{{this.url}}" data-mimetype="{{this.mimetype}}" data-original-name="{{this.originalName}}" data-size="{{this.size}}" data-uploaded-by="{{this.uploadedBy}}">
                    <span class="file-name">{{this.originalName}}</span>
                    <button class="send-asset-btn" data-url="{{this.url}}" data-mimetype="{{this.mimetype}}" data-original-name="{{this.originalName}}" data-size="{{this.size}}" data-uploaded-by="{{this.uploadedBy}}">
                        Send to Students
                    </button>
                </li>
            {{/each}}
        </ul>
    {{else}}
        <p>No files available.</p>
    {{/if}}
</div>

