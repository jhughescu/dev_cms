<h1>{{title}}</h1>

<p>Select an asset to send to all students:</p>
<div id="file-list">
    {{#if files.length}}
        <ul>
            {{#each files}}
                <div class="file-item">
                    <span>{{this.originalName}}</span>
                    <button data-asset='{
                        "url": "{{this.url}}",
                        "mimetype": "{{this.mimetype}}",
                        "originalName": "{{this.originalName}}",
                        "size": "{{this.size}}",
                        "uploadedBy": "{{this.uploadedBy}}"
                    }'>Send to Students</button>
                </div>
            {{/each}}
        </ul>
    {{else}}
        <p>No files available.</p>
    {{/if}}
</div>

