{
    "name": "cms-test-build",
    "version": "1.0.0",
    "description": "A basic dev build for testing a Node CMS",
    "main": "app.js",
    "scripts": {
        "build:css": "sass src/scss/app.scss public/css/style.css --no-source-map --style=compressed",
        "watch:css": "sass --watch src/scss/app.scss public/css/style.css --no-source-map --style=expanded",
        "dev": "cross-env NODE_ENV=development concurrently \"npm run watch:css\" \"nodemon app.js\"",
        "start": "npm run build:css && cross-env NODE_ENV=production node app.js",
        "build": "npm run build:css",
        "clean:uploads": "node utils/cleanUploadsAndDB.js"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/jhughescu/dev_cms.git"
    },
    "keywords": [
        "cms",
        "dev",
        "test",
        "node"
    ],
    "author": "J.Hughes",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/jhughescu/dev_cms/issues"
    },
    "homepage": "https://github.com/jhughescu/dev_cms#readme",
    "dependencies": {
        "axios": "^1.12.2",
        "connect-flash": "^0.1.1",
        "connect-mongo": "^5.1.0",
        "cookie-parser": "^1.4.7",
        "digest-fetch": "^3.1.1",
        "dotenv": "^17.2.3",
        "express": "^5.1.0",
        "express-handlebars": "^8.0.3",
        "express-session": "^1.18.2",
        "http-digest-client": "^0.0.3",
        "image-size": "^2.0.2",
        "mongodb-atlas-api-client": "^4.10.0",
        "mongoose": "^8.18.3",
        "multer": "^2.0.2",
        "node-fetch": "^3.3.2",
        "pdf-parse": "^2.4.5",
        "qrcode": "^1.5.4",
        "socket.io": "^4.8.1"
    },
    "devDependencies": {
        "concurrently": "^9.2.1",
        "cross-env": "^7.0.3",
        "morgan": "^1.10.1",
        "nodemon": "^3.1.10",
        "sass": "^1.93.2"
    }
}
